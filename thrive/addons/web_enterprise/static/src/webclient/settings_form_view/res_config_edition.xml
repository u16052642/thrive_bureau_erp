<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-inherit="web.res_config_edition" t-inherit-mode="extension" owl="1">

        <xpath expr="//h3" position="replace">
            <h3 class="px-0">
                Thrive <t t-esc="serverVersion"/> (Enterprise Edition)
            </h3>
        </xpath>

        <xpath expr="//*[@id='license']" position="replace">
            <a id="license" target="_blank" href="https://github.com/thrive/enterprise/blob/16.0/LICENSE" style="text-decoration: underline;">Thrive Enterprise Edition License V1.0</a>
        </xpath>

        <xpath expr="//h3" position="after">
        </xpath>

    </t>

</templates>
